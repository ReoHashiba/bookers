<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan = "3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <!--レコードの数だけ繰り返し、book[]に保存-->
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td>a</td>
            <td>b</td>
            <td>c</td>
        </tr>
        <% end %>
    </tbody>
</table>
